# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.json,.bowerrc]
insert_final_newline = false

[{.htaccess,.bowerrc,bower.json,package.json,component.json}]
indent_style = space
indent_size = 2
